{
  "compilerOptions": {
   "target": "es2016",
   "experimentalDecorators": true,
   "emitDecoratorMetadata": true, 
    "module": "commonjs",
    "baseUrl": "./src",
      "paths": {
      "@config/*":["config/*"],
      "@database/*":["database/*"],
      "@middlewares/*":["middlewares/*"],
      "@modules/*":["modules/*"],
      "@routes/*":["routes/*"],
      "@shared/*":["shared/*"],
      "@utils/*":["utils/*"]      
     },
     "resolveJsonModule": true,
     "esModuleInterop": true,
     "forceConsistentCasingInFileNames": true,
     "skipLibCheck": true
    }
}
